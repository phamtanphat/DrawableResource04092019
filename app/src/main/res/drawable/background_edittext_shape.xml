    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="30dp"/>
            <stroke android:color="#CA3D3D"
                android:width="1dp"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"
            >
            <corners android:radius="30dp"/>
            <stroke android:color="#7C7979"
                android:width="1dp"/>
        </shape>
    </item>
</selector>
